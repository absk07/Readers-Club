<%- include('../partials/header') %>

<div class="container" style="margin-top: 40px;">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% if(blogs.length > 0) { %>
            <% for(let blog of blogs) { %>
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <a class="card" href="/blogs/<%= blog._id %>" style="text-decoration: none;">
                        <img src="<%= blog.blogImage %>" class="card-img-top" alt="<%= blog.blogTitle %>" style="height: 20rem">
                        <div class="card-body">
                            <h5 class="card-title text-center" style="color: #0dcaf0;"><%= blog.blogTitle.substring(0, 25) %>.....</h5>
                            <!-- <p class="card-text"><%- blog.blogDescription.substring(0, 100) %>......</p> -->
                        </div>  
                    </a>
                </div>  
            <% } %> 
        <% } else { %>
            <i style="font-size: larger; height: 33rem;">Coming Soon...</i>
        <% } %>       
    </div>  
</div><br><br>

<%- include('../partials/footer') %>
