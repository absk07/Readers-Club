<div class="container-fluid text-center py-4">
    <div class="container">
        <h2 class="my-3" style="font-family: Georgia, serif; font-weight: bold">Featured Books</h2>
        <div class="row">
            <% for(let book of books) { %>
            <div class="col-md-4 col-sm-6 col-lg-3 g-4">
                <div class="card card-bg">
                    <a href="/allBooks/<%= book.category %>/<%= book.slug %>">
                        <img src="<%= book.image %>" class="card-img-top rounded img-fluid img-floating"
                            alt="<%= book.title %>" style="height: 400px">
                    </a>
                </div>
            </div>
            <% } %>
        </div><br>
        <a href="/allBooks" class="btn btn-lg btn-outline-info">More Books</a>
    </div>
</div>
<div class="container-fluid bg-light text-center py-4">
    <div class="container">
        <h2 class="my-5" style="font-family: Georgia, serif; font-weight: bold">Books Recommended By</h2>
        <div class="row">
            <% for(let people of peoples) { %>
            <div class="col-md-3 col-sm-4 col-lg-2">
                <div class="card card-bg bg-light">
                    <a href="/allPeople/<%= people.name %>">
                        <img src="<%= people.image %>" class="card-img-top rounded img-fluid img-floating"
                            alt="<%= people.name %>">
                    </a>
                    <div class="card-body text-center">
                        <h5 class="card-title"><%= people.name %></h5>
                        <span class="text-muted"><%= people.field %></span>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <a href="/allPeople" class="btn btn-lg btn-outline-info">More Personalities</a>
    </div>
</div>
<div class="container-fluid py-4">
    <div class="container text-center">
        <h2 class="my-5" style="font-family: Georgia, serif; font-weight: bold">Most Recommended Books</h2>
        <div class="row">
            <% for(let book of books) { %>
            <% if(book.recommendedBy.length > 10) { %>
            <div class="col-md-4 col-sm-6 col-lg-3 g-4">
                <div class="card card-bg">
                    <a href="/allBooks/<%= book.category %>/<%= book.slug %>">
                        <img src="<%= book.image %>" class="card-img-top rounded img-fluid img-floating"
                            alt="<%= book.title %>" style="height: 400px">
                    </a>
                </div>
                <div class="card-body text-center">
                    <span class="text-muted"><%= book.recommendedBy.length %> Recommendations</span>
                </div>
            </div>
            <% } %>
            <% } %>
        </div><br>
        <a href="/mostRecommendedBooks" class="btn btn-lg btn-outline-info">More Recommended Books</a>
    </div>
</div>
