<%- include('../partials/header') %>
<%- include('../partials/adminNav') %>

<h1>Edit Books</h1>

<form method="POST" action="/updateBook/<%= book.slug %>?_method=PUT">

    <input type="text" name="title" placeholder="Title" value="<%= book.title %>"><br>
    <textarea type="text" name="description"><%= book.description %></textarea><br>
    <input type="text" name="image" placeholder="Image" value="<%= book.image %>"><br>
    <input type="text" name="Buylink" placeholder="Buylink" value="<%= book.Buylink %>"><br>
    <input type="text" name="author" placeholder="Author" value="<%= book.author %>"><br>
    <input type="text" name="publishedDate" placeholder="Published Date" value="<%= book.publishedDate %>"><br>
    <input type="number" placeholder="Rating" name="rating" min="0" max="5" step="0.1" value="<%= book.rating %>"><br>
    <label for="category">Category</label>
    <select name="category" id="category" required>
        <% for(let cat of category) { %>
            <option value="<%= cat.slug %>" <%= book.category.toLowerCase() === cat.title.toLowerCase() ? 'selected' : '' %>><%= cat.title %></option>
        <% } %>
    </select><br>
    <button>Submit</button>
</form>

<%- include('../partials/footer') %>